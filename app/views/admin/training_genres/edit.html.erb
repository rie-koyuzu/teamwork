<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>メニュー編集</h2><br>
       <div class="edit-traininggenre-form">
       	<%= form_with model: @training_genre, url: admin_training_genre_path do |f| %>
       	  <%= f.label :ジャンル %>
       	  <%= f.text_field :menu,class: "col-md-8" %><br>
       	  <%= f.label :目安時間 %>
       	  <%= f.text_field :time,class: "col-md-2" %> 時間<br>
       	  <%= f.radio_button :is_genres_status, :true %>
          <%= f.label :is_genres_status, "有効"  %>
          <%= f.radio_button :is_genres_status, :false %>
          <%= f.label :is_genres_status, "無効" %>
       	  <%= f.submit "変更を保存する" ,class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>

