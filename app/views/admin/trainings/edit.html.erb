<div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <h2>トレーニングメニュー編集</h2><br>

    <div class="form-group col-md-10">
    <%= form_with model: @training_genre, url: admin_training_genres_path do |f| %>
          <%= f.label :メニュー %>
          <%= f.text_field :menu,class: "col-md-8" %><br>
          <%= f.label :目安時間 %>
          <%= f.text_field :time,class: "col-md-2" %> 時間<br>
          <%= f.submit "追加" ,class: "btn btn-primary" %>
    <% end %>
    </div>

    <br>

      <table class="table genre-index">
        <thead>
          <tr>
            <th>TRリスト</th>
          </tr>
        </thead>

        <tbody>
          <% @training_genres.each do |training_genre| %>
            <tr>
              <td><%= training_genre.menu %></td>
              <td><%= training_genre.time %>時間</td>
              <td><%= link_to "編集する", edit_admin_training_genre_path(training_genre), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
  </div>
</div>

