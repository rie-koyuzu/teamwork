 <div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="row">
    <%= form_with model: @trainings, url: admin_trainings_path(@taining) do |f| %>

    <div class="col-lg-12">
     <h2>トレーニングメニュ登録</h2>

    <br>
      <div class="col-md-12 col-md-offset-2 col-xs-3 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>

            <tr>
              <th>トレーニング内容</th>
              <td><%= f.text_field :title, class: "form-control" %></td>
            </tr>

            <tr>
              <th>目安時間</th>
              <td><%= f.text_field :time, class: "form-control" %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :training_genre_id, TrainingGenre.all ,:id, :menu, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>内容詳細</th>
              <td><%= f.text_area :introductio, class: "form-control" %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-right">
        <%= f.submit "新規登録" ,class: "btn btn-primary text-right" %>
        </div>
        </div>
        <% end %>

    </div>
  </div>
</div>