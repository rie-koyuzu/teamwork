<head>
	<script src="https://kit.fontawesome.com/42ccd6fdce.js" crossorigin="anonymous"></script>
</head>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>Member <i class="fa-solid fa-user"></i></h2>
   <!--　検索機能 -->
      <div class="search-form">
      	<%= form_with url: admin_search_path, method: :get, local: true do |f| %>
      	<%= f.text_field :keyword, value: @keyword %>
      	<%= f.submit "検索" %>
      	<% end %>
      </div><br>
   <!-- ここまで -->

      <table class="table">
        <thead>
          <tr>
            <th>社員NO</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.employee_number %></td>
              <td><%= link_to member.last_name + member.first_name, admin_member_path(member) %></td>
              <td><%= member.email %></td>
              <td>
                <% if member.is_deleted == false %>
                  在籍
                <% else %>
                  退職済み
                <% end %>
              </td>
            </tr>
          <% end %>
        <div class="col-lg-12">
        </div>
        </tbody>
      </table>
    </div>
</div>

