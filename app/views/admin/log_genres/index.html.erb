<div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <h2>ジャンル追加・一覧画面</h2><br>

    <div class="form-group col-md-10">
    <%= form_with model: @log_genre, url: admin_log_genres_path do |f| %>
          <%= f.label :ジャンル %>
          <%= f.text_field :name,class: "col-md-4" %>
          <%= f.submit "追加" ,class: "btn btn-primary" %>
    <% end %>
    </div>

    <br>

      <table class="table genre-index">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>

        <tbody>
          <% @log_genres.each do |log_genre| %>
            <tr>
              <td><%= log_genre.name %></td>
              <td><%= link_to "編集する", edit_admin_log_genre_path(log_genre), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
  </div>
</div>

