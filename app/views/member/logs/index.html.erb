 <!-- メンバーログ一覧ページ -->

<head>
	<script src="https://kit.fontawesome.com/42ccd6fdce.js" crossorigin="anonymous"></script>
</head>
<div class="container">
	<h2 style="margin: 10px 0;"><i class="fa-solid fa-user-pen"></i> Log's </h2>

  <!--　検索機能 -->
      <div class="search-form">
      	<%= form_with url: member_search_path, method: :get, local: true do |f| %>
      	<%= f.text_field :keyword, value: @keyword %>
      	<%= f.submit "検索" %>
      	<% end %>
      </div>
      </div><br>

  <!-- 新規作成 -->
   	<%= link_to new_member_log_path, class: "btn btn btn-primary text-white" do %>
	  <i class="fa-regular fa-pen-to-square"></i>
    <% end %><br>

  <!-- ログ一覧 -->
    <%= render 'layouts/list', log: @log %>