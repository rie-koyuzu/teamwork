<!-- メンバー側 -->
<head>
	<script src="https://kit.fontawesome.com/42ccd6fdce.js" crossorigin="anonymous"></script>
</head>
<div class="container">
   <h2><i class="fa-solid fa-dumbbell"></i> Training <i class="fa-solid fa-dumbbell"></i></h2><br>
    <div class="row">
      <div class="col-xs-12">
      </div>
    </div>
     <div class="container">
       <div class="row">
         <div class="col-lg-8">
     <table class="table table-striped">
       <thead>
         <tr>
           <th>TR内容</th>
           <th>目安時間</th>
           <th>内容詳細</th>
         </tr>
       </thead>
       <tbody>
         <% @trainings.each do |training| %>
         <tr>
           <td>
             <%= link_to training.title ,member_training_path(training, {member_id: @member.id}) %></td>
           <td><%= training.time %> 時間</td>
           <td><%= training.introductio %></td>
         </tr>
       </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
