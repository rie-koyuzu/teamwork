<div class="container">
  <h2>トレーニング詳細</h2><br>
      <div class="row">
              <tbody>
        <div class="col-lg-6">
          <table class="table">
                <tr>
                  <td>TR内容</td>
                  <td><%= @training.title %></td>
                </tr>
                <tr>
                  <td>目安時間</td>
                  <td><%= @training.time %> 時間</td>
                </tr>
                <tr>
                  <td>ジャンル</td>
                  <td><%= @training.training_genre.menu %></td>
                </tr>
                <tr>
                  <td>TR詳細</td>
                  <td><%= @training.introductio %></td>
                </tr>
              </tbody>
          </table>
              <div>
                <%= form_with model: [@training, @training_comment], url: member_training_training_comments_path(@training.id), method: :post do |f| %>
                <%= f.text_area :comment, rows: '5', placeholder: "コメント入力" %>
                <%= f.hidden_field :progress, value: 0 %>
                <%= f.submit "送信する" %>
                <% end %>
              </div>

              <div class="col-md-offset-1 col-lg-12 text-center">
                <% @training.training_comments.each do |training_comment| %>
                <%= training_comment.created_at.strftime('%Y/%m/%d') %><%= training_comment.comment %><br>
                <% end %>
              </div>

        </div>
      </div>
  </div>